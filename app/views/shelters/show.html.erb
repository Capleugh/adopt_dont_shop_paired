<p>Pets at <%= link_to "#{@shelter.name}", "/shelters/#{@shelter.id}/pets" %></p>
<h1><%= @shelter.name %></h1>
<p>
  <%= @shelter.address %><br/>
  <%= @shelter.city %>,
  <%= @shelter.state %>
  <%= @shelter.zip %>
</p>
<%= link_to 'Edit', "/shelters/#{@shelter.id}/edit" %>
<%= button_to 'Delete', "/shelters/#{@shelter.id}", method: :delete %>

<% @shelter.reviews.each do |review| %>
  <section id = "reviews-<%= review.id %>">
    <%= review.title %> 
    <%= review.rating %> 
    <%= review.content %>
    <%= image_tag(review.opt_pic) %>
  </section> 
<% end %>
