<p>Pets at <%= link_to "#{@shelter.name}", "/shelters/#{@shelter.id}/pets" %></p>
<h1><%= @shelter.name %></h1>
<p>
  <%= @shelter.address %><br/>
  <%= @shelter.city %>,
  <%= @shelter.state %>
  <%= @shelter.zip %>
</p>
<%= link_to 'Edit', "/shelters/#{@shelter.id}/edit" %>
<%= button_to 'Delete', "/shelters/#{@shelter.id}", method: :delete %>

<%= link_to 'Add Review', "/shelters/#{@shelter.id}/reviews/new" %>
<% @shelter.reviews.each do |review| %>
  <section id = "reviews-<%= review.id %>">
    <p> Title: <%= review.title %> </p>
    <p> Rating: <%= review.rating %> </p>
    <p> Content: <%= review.content %> </p>
    <p> Optional Image: <%= image_tag(review.opt_pic) %></p>
    <%= link_to 'Edit Review', "/shelters/#{@shelter.id}/reviews/#{review.id}/edit" %>
    <%= button_to 'Delete Review', "/shelters/#{@shelter.id}/reviews/#{review.id}", method: :delete %>
  </section>
<% end %>
