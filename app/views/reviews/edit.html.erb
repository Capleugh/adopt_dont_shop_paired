<%= form_tag "/reviews/#{@review.id}", method: :patch do %>

  <%= label_tag :title %>
  <%= text_field_tag :title, @review.title %><br/>
  <%= label_tag :rating %>
  <%= select_tag :rating, options_for_select([1,2,3,4,5], @review.rating) %>
  <%= label_tag :content %>
  <%= text_field_tag :content, @review.content %><br/>
  <%= label_tag :optional_image %>
  <%= text_field_tag :opt_pic, @review.opt_pic %><br/>

  <%= submit_tag 'Update Review' %>
<% end %>
