<% if @shelter %>
  <h1>Available for Adoption at <%= link_to "#{@shelter.name}", "/shelters/#{@shelter.id}" %></h1>
  <h2><%= link_to 'New Pet', "/shelters/#{@shelter.id}/pets/new" %></h2>
    <% @pets.each do |pet| %>
      <section id="pet-<%=pet.id%>">
        <h3>Name: <%= link_to "#{pet.name}", "/pets/#{pet.id}" %></h3>
          <p>Age: <%= pet.approximate_age %></p>
          <p>Sex: <%= pet.sex %></p>
          <img src= <%= pet.image %>><br/>
        <p><%= link_to 'Update', "/shelters/#{pet.shelter.id}/pets/#{pet.id}/edit" %> <%= button_to 'Delete', "/pets/#{pet.id}", method: :delete %></p>
      </section>
    <% end %>
<% else %>
  <h1>All Pets</h1>
    <% @pets.each do |pet| %>
      <section id="pet-<%=pet.id%>">
        <h4>Name: <%= link_to "#{pet.name}", "pets/#{pet.id}" %></h4>
        <p>Age: <%= pet.approximate_age %></p>
        <p>Sex: <%= pet.sex %></p>
        <p>Available at: <%= link_to "#{pet.shelter.name}", "shelters/#{pet.shelter.id}" %></p>
        <img src= <%= pet.image %>><br/>
        <p><%= link_to 'Update', "/pets/#{pet.id}/edit" %> <%= button_to 'Delete', "/pets/#{pet.id}", method: :delete %></p>
      </section>
  <% end %>
<% end %>
