<section id="pet-<%= @pet.id%>">
  <p><%= button_to 'Fave it', "/cart/pets/#{@pet.id}", method: :patch %></p>
  <h3>Name: <%= @pet.name %></h3>
  <p>Description: <%= @pet.description %></p>
  <p>Age: <%= @pet.approximate_age %></p>
  <p>Sex: <%= @pet.sex %></p>
  <p>Status: <%= @pet.status %></p>
  <%= image_tag(@pet.image) %><br/>
  <p><%= link_to 'Update', "/pets/#{@pet.id}/edit" %> <%= button_to 'Delete', "/pets/#{@pet.id}", method: :delete %></p>
</section>
